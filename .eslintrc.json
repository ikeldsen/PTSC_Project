{
    "extends": "airbnb",
    "rules": {
        "indent": [
            "error",
            4
        ],
        "react/jsx-indent": [
            "error",
            4
        ],
        "react/jsx-indent-props": [
            "error",
            4
        ],
        "linebreak-style": 0,
        "jsx-a11y/label-has-for": [ 2, {
            "required": {
                "every": [ "id" ]
            }
        }],
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
    }
}